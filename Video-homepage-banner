<script>
function startVideo() {
    var video = document.getElementById('banner-video');
    var playButton = document.querySelector('.play-button-container');
    
    video.play();
    playButton.style.display = 'none';
}

function toggleVideo() {
    var video = document.getElementById('banner-video');
    var playButton = document.querySelector('.play-button-container');
    
    if (video.paused) {
        video.play();
        playButton.style.display = 'none';
    } else {
        video.pause();
        playButton.style.display = 'block';
    }
}
</script>
